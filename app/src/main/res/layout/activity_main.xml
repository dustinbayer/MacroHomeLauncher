    </android.support.v4.widget.DrawerLayout>

    <ImageView
        android:id="@+id/top_gradient"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_top"
        />
    <ImageView
        android:id="@+id/bottom_gradient"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_bottom"
        />

    <View
        android:id="@+id/edit_blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"></View>
<LinearLayout
    android:id="@+id/macro_bar"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
   >

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/button_q"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/circle_button"
                android:text="Q"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/button_w"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/circle_button"
                android:text="W"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/button_e"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/circle_button"
                android:text="E"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/button_r"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/circle_button"
                android:text="R"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/button_t"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/circle_button"
                android:text="T"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/button_y"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/circle_button"
                android:text="Y"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/button_u"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/circle_button"
                android:text="U"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/button_i"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/circle_button"
                android:text="I"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/button_o"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/circle_button"
                android:text="O"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

    <com.eftimoff.patternview.PatternView
        xmlns:patternview="http://schemas.android.com/apk/res-auto"
        android:id="@+id/patternView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        patternview:circleSize="60dp"
        patternview:pathColor="#000000"
        patternview:circleColor="#00000000"
        patternview:dotColor="#00000000"
        patternview:gridRows="3"
        patternview:gridColumns="3"/>

    <ImageButton
        android:id="@+id/apps_button"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/home_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="6dp"
        android:layout_marginStart="6dp"/>

